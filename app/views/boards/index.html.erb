<%= content_tag :h3, I18n.t('board.welcome'),
                class: 'flex intems-center justify-center font-mono text-sm text-gray-200 text-center mx-auto'
%>

<div class='grid grid-rows-2 grid-cols-2 grid-flow-row gap-2 hover:gap-4 mt-10 px-2'>
  <%= button_for :create, nil, new_board_path, { class: 'text-gray-200' } if signed? %>

  <% @boards.each do |board| %>
    <%= link_to board_path(board), class: '' do %>
      <div class="bg-blue-300 card rounded-2xl shadow-lg" >
        <div class="p-4">
          <h2 class="font-bold text-lg"><%= board.name %></h2>
          <p class="text-gray-700 text-xs"><%= board.description %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
