<%= button_for :button_back, I18n.t('button_back'), boards_path %>

<%= content_tag :h3, I18n.t('board.list'),
    class: 'flex intems-center justify-center font-mono text-sm text-gray-200 mx-auto'
%>

<%= content_tag :div, class: 'grid grid-rows-2 grid-cols-2 grid-flow-row gap-2 hover:gap-4 mt-10 px-2' do %>
  <%= button_for :create, nil, new_board_context_path(board_id: params[:id]), { class: 'text-gray-200' } if signed? %>

  <% unless @contexts.empty? %>
    <% @contexts.each do |context| %>
      <%= link_to board_context_path(board_id: @boards.id, id: context.id), class: '' do %>
        <%= content_tag :div, class: 'bg-orange-200 card rounded-2xl shadow-lg' do %>
          <%= content_tag :div, class: 'p-4' do %>
            <%= content_tag :h3, context.name, class: 'font-bold text-lg' %>
            <%= content_tag :p, context.description, class: 'text-gray-700 text-xs' %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
