<%
  if @task.nil?
    @task = Task.find(params[:task_id])
  end
%>

<%= button_for :button_back, t('buttons.back'), nil %>

<%= content_tag :h3, t('task.update'),
    class: 'flex intems-center justify-center font-mono text-md text-gray-200 mt-14 mx-auto'
%>

<%= content_tag :div, class: '' do %>
  <%= content_tag :div, class: '' do %>
    <%= form_with(scope: :task,
        model: @task,
        url: board_context_task_path(board_id: params[:board_id], context_id: params[:context_id], id: @task.id),
        method: :patch, local: true, class: 'form' ) do |form| %>
      <%= content_tag :div, class: '' do %>
        <%= form.label :description, title: Task.human_attribute_name(:description), class:'' %>
        <%= form.text_area :description, class:'w-full h-56 rounded-xl', placeholder: t('form.placeholder.default'), value: @task.description %>
      <% end %>
      <%= form.submit t('form.submit.default'), class: 'btn-submit' %>
    <% end %>
  <% end %>
<% end %>
