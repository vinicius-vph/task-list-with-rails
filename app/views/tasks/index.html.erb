<%#= render 'shared/back_button' %>

<%= content_tag :div, class: 'taks-container' do %>
  <%= render 'create_button' %>
  <% @tasks.each do |task| %>
    <%= content_tag :div, class: "task-content #{'backdrop-blur-xl bg-white/30 bg-clip-border border-2 border-steel-900 border-dashed'  if task.completed?}" do %>
      <%= content_tag :p, task.description, class: "#{'line-through' if task.completed?}" %>

      <%= content_tag :div, class: 'task-buttons' do %>
        <% if task.completed? %>
          <%= button_to '⚠️', task_completions_path(task), method: :delete,
          class: "" %>
        <% else %>
          <%= button_to '✅', task_completions_path(task),
            class: "" %>
        <% end %>
        <%= link_to '✏️', edit_task_path(task), class:"" %>
        <%= button_to '❌', "/tasks/#{task.id}", method: :delete, class:"" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
