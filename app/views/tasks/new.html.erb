<%= button_for :button_back, t('buttons.back'), board_context_path(board_id: params[:board_id], id: params[:context_id]) %>

<%= content_tag :h3, t('task.new'), class: 'flex intems-center justify-center font-mono text-md text-gray-200 mt-14 mx-auto' %>

<%= content_tag :div, class: '' do %>
  <%= content_tag :div, class: '' do %>
    <%= form_with(scope: @task,
        url: board_context_tasks_path(board_id: params[:board_id], context_id: params[:context_id]),
        method: :post, class: 'form' ) do |form| %>
      <%= content_tag :div, class: '' do %>
        <%= form.label :description, title: Task.human_attribute_name(:description), class:'' %>
        <%= form.text_area :description, class:'w-full h-56 rounded-xl', placeholder: t('form.placeholder.default') %>
      <% end %>
      <%= form.hidden_field :context_id, value: params[:context_id] %>
      <%= form.submit t('form.submit.default'), class: 'btn-submit' %>
    <% end %>
  <% end %>
<% end %>
