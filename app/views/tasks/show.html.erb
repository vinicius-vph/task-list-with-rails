<%= button_for :button_back, I18n.t('button_back'), board_context_path(board_id: @task.board.id, id: @task.context.id)%>

<%= content_tag :div, class: 'w-11/12 h-auto mx-auto mt-20 py-2 px-4 bg-red-200 card rounded-2xl shadow-lg' do %>
  <%= content_tag :div, class: 'p-4 mb-4' do %>
    <%= content_tag :p, @task.description, class: 'text-gray-600 text-sm' %>
  <% end %>

  <%= content_tag :div, class: 'flex text-xs' do %>
    <%= button_for :checkbox, nil, board_context_task_completions_path(task_id: @task.id), { class: 'text-gray-200 mx-3' } %>
    <%= button_for :edit, nil, edit_board_context_task_path(task_id: @task.id), { class: 'text-gray-200 mx-3' } %>
    <%= button_for :delete, nil, board_context_task_path(board_id: @task.board.id, context_id: @task.context.id, id: @task.id), { class: 'text-gray-200 mx-3' } %>
  <% end %>
<% end %>
